# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Juris AGI uses a multi-database architecture:
# 1. Platform Database (juris_platform) - Platform administration
# 2. Tenant Databases (juris_tenant_{slug}) - One per company
# 3. Evidence Repository (evidence_repository) - Shared legal knowledge

# Legacy single database (for backward compatibility during migration)
DATABASE_URL="postgresql://user:password@host:5432/neondb?sslmode=require"

# Platform Database (Juris AGI Core)
# Contains: JurisAdmin, Tenants, Subscriptions, Platform API Keys
PLATFORM_DATABASE_URL="postgresql://user:password@host:5432/juris_platform?sslmode=require"

# Tenant Database Template (used for provisioning new tenants)
# Connection details for tenant database cluster
TENANT_DATABASE_HOST="your-db-host.com"
TENANT_DATABASE_PORT="5432"
TENANT_DATABASE_USER="juris_tenant_admin"
TENANT_DATABASE_PASSWORD="your-tenant-db-password"

# Evidence Repository Database (shared legal knowledge base)
EVIDENCE_DATABASE_URL="postgresql://user:password@host:5432/evidence_repository?sslmode=require"

# =============================================================================
# AUTHENTICATION
# =============================================================================

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-secret-here"

# Juris Admin Configuration
JURIS_ADMIN_SECRET="generate-another-secure-secret-here"

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =============================================================================

SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="your-email@gmail.com"
SMTP_FROM_NAME="Juris AGI"

# =============================================================================
# API KEYS (Platform-Level)
# =============================================================================
# These are Juris AGI's own API keys, used when tenants don't provide their own

# OpenAI (for AI-powered document analysis)
OPENAI_API_KEY="sk-..."

# Anthropic (alternative AI provider)
ANTHROPIC_API_KEY="sk-ant-..."

# =============================================================================
# STORAGE (Platform-Level)
# =============================================================================

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET="juris-agi-documents"
AWS_S3_REGION="us-east-1"

# =============================================================================
# BILLING (Stripe)
# =============================================================================

STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# =============================================================================
# EVIDENCE API
# =============================================================================
# Evidence Repository API endpoint for document processing and embeddings
# Production: https://evidence-api-sepia.vercel.app
# Local development: http://localhost:8000

EVIDENCE_API_URL="https://evidence-api-sepia.vercel.app"
EVIDENCE_API_KEY="your-evidence-api-key"

# =============================================================================
# ENCRYPTION
# =============================================================================
# Key for encrypting sensitive data (API keys, passwords) in the database
# Generate with: openssl rand -base64 32

ENCRYPTION_KEY=""
